create database 2601994049_lokaverkefni;
use 2601994049_lokaverkefni;
CREATE TABLE tegund (
    ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
    nafn VARCHAR(30)
);

CREATE TABLE hofundur (
    ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
    nafn VARCHAR(50),
    faedingardagur DATE,
    danardagur DATE,
    thjoderni VARCHAR(50)
);

CREATE TABLE flokkur (
    ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
    nafn VARCHAR(50)
);

CREATE TABLE flytjandi (
    ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
    nafn VARCHAR(60),
    hljomsveit VARCHAR(60),
    flokkur INT,
    faedingardagur DATE,
    danardagur DATE,
    thjoderni VARCHAR(50),
    FOREIGN KEY (flokkur)
        REFERENCES flokkur (ID)
);

CREATE TABLE utgefandi (
    ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
    nafn VARCHAR(50),
    ar_stofnad INT
);

CREATE TABLE diskur (
    ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
    nafn VARCHAR(60),
    verd INT,
    verdlaun VARCHAR(300),
    utgafudagur DATE,
    utgefandi INT,
    FOREIGN KEY (utgefandi)
        REFERENCES utgefandi (ID)
);

CREATE TABLE lag (
    ID INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
    nafn VARCHAR(60),
    flytjandi INT,
    hofundur INT,
    tegund INT,
    diskur INT,
    lengd DECIMAL(4 , 2 ),
    texti VARCHAR(2000),
    utgafudagur DATE,
    FOREIGN KEY (flytjandi)
        REFERENCES flytjandi (ID),
    FOREIGN KEY (hofundur)
        REFERENCES hofundur (ID),
    FOREIGN KEY (tegund)
        REFERENCES tegund (ID),
    FOREIGN KEY (diskur)
        REFERENCES diskur (ID)
);
drop table diskur;
insert into utgefandi(nafn,ar_stofnad)
values
('BGM',2008),
('Sony',1946),
('UMPG',1972);

insert into diskur(nafn,verd,verdlaun,utgafudagur,utgefandi)
values
